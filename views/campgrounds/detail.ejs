<%- layout('layouts/boilerPlate.ejs') %>
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= campground.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= campground.location %></li>
        <li class="list-group-item"><%= campground.price %> $</li>
        <li class="list-group-item">
          Suggested by <strong><%= campground.author.username %></strong>
        </li>
        <li class="list-group-item"><%= campground.image %></li>
      </ul>
      <% if(currentUser && campground.author.equals(currentUser._id)) {%>
      <div class="card-body">
        <form action="/campgrounds/delete/<%= campground.id %>" method="POST">
          <a
            href="/campgrounds/edit/<%= campground.id %>"
            class="btn btn-secondary card-link"
            >Update</a
          >
          <button href="#" class="btn btn-danger card-link">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
  <div class="col-6">
    <% if(currentUser) {%>
    <form
      action="/campgrounds/<%= campground.id %>/reviews"
      method="POST"
      class="validated-form mb-3"
      novalidate
    >
      <h3>Leave a review</h3>
      <div class="mb-3">
        <label for="review[rating]" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          class="form-range"
          id="rating"
          name="review[rating]"
        />
      </div>
      <div class="mb-3">
        <label for="review" class="form-label">Review</label>
        <textarea
          class="form-control"
          id="review"
          name="review[body]"
          rows="3"
          required
        ></textarea>
      </div>
      <button class="btn btn-success">Submit your review</button>
    </form>
    <% }else { %>
    <h3>You need to log in for leaving a review</h3>
    <% } %> <% for (let review of campground.reviews) {%>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%= review.rating %></h5>
        <h6 class="card-subtitle mb-2 text-muted">
          by <%= review.author.username %>
        </h6>
        <p class="card-text"><%= review.body %></p>
        <% if(currentUser && currentUser._id.equals(review.author._id)) {%>
        <form
          action="/campgrounds/<%= campground.id %>/reviews/<%= review.id %>"
          method="POST"
        >
          <button class="btn btn-sm btn-danger" type="submit">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
