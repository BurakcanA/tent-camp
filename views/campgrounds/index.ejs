<%- layout('layouts/boilerPlate.ejs') %> <% for(let c of campgrounds) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= c.images[0].url %>" alt="" class="img-fluid" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <div class="card-title"><h1><%= c.title %></h1></div>
        <div class="card-text">
          <p><%= c.description %></p>
        </div>
        <div class="card-text">
          <p class="text-info"><%= c.location %></p>
        </div>
        <a href="/campgrounds/detail/<%= c.id %>" class="btn btn-primary"
          >Go the Details</a
        >
      </div>
    </div>
  </div>
</div>
<% } %>
